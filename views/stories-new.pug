extends layout.pug

block content
    if story
        form(action="/stories/"+ story.id + "/edit" method='POST')
            .data
                input(type='hidden' name='_csrf' value=csrfToken)
                label(for="title") Title
                input(type="text" required="required" name="title" value=story.title)
                label(for="content") Content
                if story.storyImage
                    label(for="storyImage")
                    input(type="url" name="storyImage")
                textarea(name="content" cols="30" rows="40") #{story.content}
                button(type="submit" value='Submit') Submit
    else
        form(action="/stories/new" method="POST")
            .data
                input(type='hidden' name='_csrf' value=csrfToken)
                label(for="title") Title
                input(type="text" required="required" name="title")
                label(for="storyImage")
                input(type="url" name="storyImage")
                label(for="content") Content
                textarea(name="content" cols="30" rows="40")
                .buttons
                    input(type="submit")
                    a(href="/") Cancel
