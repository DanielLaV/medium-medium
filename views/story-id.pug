extends layout.pug

append head
    script(src="../javascripts/comments.js" type="module")

block content
    h1= story.title
    .story
        p= story.content
        .comments
            label( for="newComment" name="newComment") Add your comment below
            textarea#commentContent
            button(type='submit' value=story.id)#submitComment Add Comment
            #commentsDiv



        if user.id == story.userId
            form(action="/stories/"+ story.id + "/edit" method='GET')
                input(type='hidden' name='_csrf' value=csrfToken)
                input(type='submit' value='Edit')
            form(action="/stories/"+ story.id method='POST')
                input(type='hidden' name='_csrf' value=csrfToken)
                input(type='submit' value='Delete')
