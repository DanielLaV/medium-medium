doctype html
html
  head
      block head
        title=title
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/forms.css')
        <link rel="icon" href="./favicon.png">
        script(src="/javascripts/forms.js" type="module")
  body
    .nav
      .loginAndOut
        if locals.authenticated
          p Welcome #{user.firstName}
          form(action="/users/logout" method="POST")
            input(type='hidden' name='_csrf' value=csrfToken)
            button#logoutButton Log Out
        else
          form(action="/" method="GET")
            button#goHome(href="/") Home
          button#loginButton Log In
          button#signupButton Sign Up

    .login
      .container
        .contents
          h2.heading Welcome Back.
          form(action="/users/login" method="POST")
            .data
              input(type='hidden' name='_csrf' value=csrfToken)
              label(for="email") Email
              input(type="email" required="required" name="email")
              label(for="password") Password
              input(type="password" required="required" name="password")
              button(type="submit") Log In
              p.signupLink No account?
                a(href="#") Sign Up

    .signup
      .container
        .contents
          h1.heading Sign Up
          form(action="/users/signup" method="POST")
            .data
              input(type='hidden' name='_csrf' value=csrfToken)
              label(for="firstName") First Name
              input(type="text" required="required" name="firstName")
              label(for="lastName") Last Name
              input(type="text" required="required" name="lastName")
              label(for="username") User Name
              input(type="text" required="required" name="username")
              label(for="email") Email
              input(type="email" required="required" name="email")
              label(for="password") Password
              input(type="password" required="required" name="password")
              label(for="confirmPassword") Confirm Password
              input(type="password" required="required" name="confirmPassword")
              button(type="submit") Sign Up
              p.signupLink Already have an account?
                a(href="#") Log In

block content
